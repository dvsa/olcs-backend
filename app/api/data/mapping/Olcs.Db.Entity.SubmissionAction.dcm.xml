<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\SubmissionAction" table="submission_action">
    <indexes>
      <index name="fk_submission_action_user1_idx" columns="sender_user_id"/>
      <index name="fk_submission_action_user2_idx" columns="recipient_user_id"/>
      <index name="fk_submission_action_user3_idx" columns="created_by"/>
      <index name="fk_submission_action_user4_idx" columns="last_modified_by"/>
      <index name="fk_submission_action_submission1_idx" columns="submission_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="isDecision" type="boolean" column="is_decision" nullable="false"/>
    <field name="comment" type="string" column="comment" length="4000" nullable="true"/>
    <field name="urgent" type="boolean" column="urgent" nullable="true"/>
    <field name="submissionActionStatus" type="string" column="submission_action_status" length="100" nullable="false"/>
    <field name="submissionActionType" type="string" column="submission_action_type" length="45" nullable="false"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="submission" target-entity="Olcs\Db\Entity\Submission">
      <join-columns>
        <join-column name="submission_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="recipientUser" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="recipient_user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="senderUser" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="sender_user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

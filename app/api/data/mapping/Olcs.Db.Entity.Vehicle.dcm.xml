<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\Vehicle" table="vehicle">
    <indexes>
      <index name="fk_vehicle_user1_idx" columns="created_by"/>
      <index name="fk_vehicle_user2_idx" columns="last_modified_by"/>
      <index name="fk_vehicle_ref_data1_idx" columns="psv_type"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="vrm" type="string" column="vrm" length="20" nullable="true"/>
    <field name="platedWeight" type="integer" column="plated_weight" nullable="true"/>
    <field name="isArticulated" type="boolean" column="is_articulated" nullable="true"/>
    <field name="certificateNo" type="string" column="certificate_no" length="50" nullable="true"/>
    <field name="isRefrigerated" type="boolean" column="is_refrigerated" nullable="true"/>
    <field name="isTipper" type="boolean" column="is_tipper" nullable="true"/>
    <field name="isNovelty" type="boolean" column="is_novelty" nullable="true"/>
    <field name="viAction" type="string" column="vi_action" length="1" nullable="true"/>
    <field name="section26" type="boolean" column="section26" nullable="false"/>
    <field name="section26Curtail" type="boolean" column="section26_curtail" nullable="false"/>
    <field name="section26Revoked" type="boolean" column="section26_revoked" nullable="false"/>
    <field name="section26Suspend" type="boolean" column="section26_suspend" nullable="false"/>
    <field name="deletedDate" type="datetime" column="deleted_date" nullable="true"/>
    <field name="specifiedDate" type="datetime" column="specified_date" nullable="true"/>
    <field name="makeModel" type="string" column="make_model" length="100" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="psvType" target-entity="Olcs\Db\Entity\RefData">
      <join-columns>
        <join-column name="psv_type" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

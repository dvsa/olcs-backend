<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\PreviousConvictions" table="previous_convictions">
    <indexes>
      <index name="fk_previous_convictions_application1_idx" columns="application_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="previousConvictionscol" type="string" column="previous_convictionscol" length="45" nullable="true"/>
    <field name="personTitleId" type="integer" column="person_title_id" nullable="true"/>
    <field name="forename" type="string" column="forename" length="35" nullable="false"/>
    <field name="familyName" type="string" column="family_name" length="35" nullable="false"/>
    <field name="birthDate" type="date" column="birth_date" nullable="true"/>
    <field name="categoryText" type="string" column="category_text" length="1024" nullable="true"/>
    <field name="notes" type="string" column="notes" length="4000" nullable="true"/>
    <field name="courtFpn" type="string" column="court_fpn" length="70" nullable="true"/>
    <field name="penalty" type="string" column="penalty" length="255" nullable="true"/>
    <many-to-one field="application" target-entity="Olcs\Db\Entity\Application">
      <join-columns>
        <join-column name="application_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\Conviction" table="conviction">
    <indexes>
      <index name="fk_conviction_conviction_category1_idx" columns="conviction_category_id"/>
      <index name="fk_conviction_person1_idx" columns="person_id"/>
      <index name="fk_conviction_organisation1_idx" columns="organisation_id"/>
      <index name="fk_conviction_transport_manager1_idx" columns="transport_manager_id"/>
      <index name="fk_conviction_user1_idx" columns="created_by"/>
      <index name="fk_conviction_user2_idx" columns="last_modified_by"/>
      <index name="fk_conviction_operator_case1_idx" columns="case_id"/>
      <index name="fk_conviction_application1_idx" columns="application_id"/>
      <index name="fk_conviction_ref_data1_idx" columns="defendant_type"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="offenceDate" type="datetime" column="offence_date" nullable="true"/>
    <field name="convictionDate" type="datetime" column="conviction_date" nullable="true"/>
    <field name="court" type="string" column="court" length="70" nullable="true"/>
    <field name="penalty" type="string" column="penalty" length="255" nullable="true"/>
    <field name="costs" type="string" column="costs" length="255" nullable="true"/>
    <field name="msi" type="boolean" column="msi" nullable="true"/>
    <field name="isDeclared" type="boolean" column="is_declared" nullable="false"/>
    <field name="operatorName" type="string" column="operator_name" length="70" nullable="true"/>
    <field name="birthDate" type="date" column="birth_date" nullable="true"/>
    <field name="notes" type="string" column="notes" length="4000" nullable="true"/>
    <field name="takenIntoConsideration" type="string" column="taken_into_consideration" length="4000" nullable="true"/>
    <field name="categoryText" type="string" column="category_text" length="1024" nullable="true"/>
    <field name="convictedName" type="string" column="convicted_name" length="70" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="case" target-entity="Olcs\Db\Entity\Cases">
      <join-columns>
        <join-column name="case_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="application" target-entity="Olcs\Db\Entity\Application">
      <join-columns>
        <join-column name="application_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="defendantType" target-entity="Olcs\Db\Entity\RefData">
      <join-columns>
        <join-column name="defendant_type" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="person" target-entity="Olcs\Db\Entity\Person">
      <join-columns>
        <join-column name="person_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="organisation" target-entity="Olcs\Db\Entity\Organisation">
      <join-columns>
        <join-column name="organisation_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="transportManager" target-entity="Olcs\Db\Entity\TransportManager">
      <join-columns>
        <join-column name="transport_manager_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="convictionCategory" target-entity="Olcs\Db\Entity\ConvictionCategory">
      <join-columns>
        <join-column name="conviction_category_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\LegacyRecommendation" table="legacy_recommendation">
    <indexes>
      <index name="fk_case_recommendation_cases1_idx" columns="case_id"/>
      <index name="fk_case_recommendation_user1_idx" columns="from_user_id"/>
      <index name="fk_case_recommendation_user2_idx" columns="to_user_id"/>
      <index name="fk_legacy_recommendation_legacy_case_action1_idx" columns="action_id"/>
      <index name="fk_legacy_recommendation_user1_idx" columns="created_by"/>
      <index name="fk_legacy_recommendation_user2_idx" columns="last_modified_by"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="recDate" type="datetime" column="rec_date" nullable="false"/>
    <field name="piReason" type="string" column="pi_reason" length="255" nullable="true"/>
    <field name="comment" type="string" column="comment" length="4000" nullable="true"/>
    <field name="effectiveDate" type="date" column="effective_date" nullable="true"/>
    <field name="notes" type="text" column="notes" nullable="true"/>
    <field name="piDecision" type="string" column="pi_decision" length="255" nullable="true"/>
    <field name="request" type="string" column="request" length="20" nullable="true"/>
    <field name="revokeLic" type="boolean" column="revoke_lic" nullable="true"/>
    <field name="status" type="boolean" column="status" nullable="true"/>
    <field name="totalPoints" type="integer" column="total_points" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="action" target-entity="Olcs\Db\Entity\LegacyCaseAction">
      <join-columns>
        <join-column name="action_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="toUser" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="to_user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="fromUser" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="from_user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="case" target-entity="Olcs\Db\Entity\Cases">
      <join-columns>
        <join-column name="case_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

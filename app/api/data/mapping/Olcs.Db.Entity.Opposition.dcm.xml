<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\Opposition" table="opposition">
    <indexes>
      <index name="fk_opposition_application1_idx" columns="application_id"/>
      <index name="fk_opposition_opposer1_idx" columns="opposer_id"/>
      <index name="fk_opposition_user1_idx" columns="created_by"/>
      <index name="fk_opposition_user2_idx" columns="last_modified_by"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="isRepresentation" type="boolean" column="is_representation" nullable="false"/>
    <field name="notes" type="string" column="notes" length="4000" nullable="true"/>
    <field name="isCopied" type="boolean" column="is_copied" nullable="false"/>
    <field name="raisedDate" type="date" column="raised_date" nullable="true"/>
    <field name="isInTime" type="boolean" column="is_in_time" nullable="false"/>
    <field name="isPublicInquiry" type="boolean" column="is_public_inquiry" nullable="false"/>
    <field name="deletedDate" type="datetime" column="deleted_date" nullable="true"/>
    <field name="isValid" type="boolean" column="is_valid" nullable="false"/>
    <field name="validNotes" type="string" column="valid_notes" length="4000" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="opposer" target-entity="Olcs\Db\Entity\Opposer">
      <join-columns>
        <join-column name="opposer_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="application" target-entity="Olcs\Db\Entity\Application">
      <join-columns>
        <join-column name="application_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

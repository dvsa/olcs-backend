<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\Appeal" table="appeal">
    <indexes>
      <index name="fk_appeal_case1_idx" columns="case_id"/>
      <index name="fk_appeal_user1_idx" columns="created_by"/>
      <index name="fk_appeal_user2_idx" columns="last_modified_by"/>
      <index name="fk_appeal_ref_data1_idx" columns="reason"/>
      <index name="fk_appeal_ref_data2_idx" columns="outcome"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="appeal_no_UNIQUE" columns="appeal_no"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="appealNo" type="string" column="appeal_no" length="20" nullable="false"/>
    <field name="tmCaseId" type="integer" column="tm_case_id" nullable="true"/>
    <field name="deadlineDate" type="datetime" column="deadline_date" nullable="true"/>
    <field name="appealDate" type="datetime" column="appeal_date" nullable="true"/>
    <field name="outlineGround" type="string" column="outline_ground" length="1024" nullable="true"/>
    <field name="hearingDate" type="datetime" column="hearing_date" nullable="true"/>
    <field name="papersDueDate" type="datetime" column="papers_due_date" nullable="true"/>
    <field name="comment" type="string" column="comment" length="1024" nullable="true"/>
    <field name="papersSentDate" type="date" column="papers_sent_date" nullable="true"/>
    <field name="decisionDate" type="date" column="decision_date" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="outcome" target-entity="Olcs\Db\Entity\RefData">
      <join-columns>
        <join-column name="outcome" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="reason" target-entity="Olcs\Db\Entity\RefData">
      <join-columns>
        <join-column name="reason" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="case" target-entity="Olcs\Db\Entity\Cases">
      <join-columns>
        <join-column name="case_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\Email" table="email">
    <indexes>
      <index name="fk_email_user1_idx" columns="created_by"/>
      <index name="fk_email_user2_idx" columns="last_updated_by"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="addedDate" type="datetime" column="added_date" nullable="true"/>
    <field name="deferredDate" type="datetime" column="deferred_date" nullable="true"/>
    <field name="sentDate" type="datetime" column="sent_date" nullable="true"/>
    <field name="importance" type="smallint" column="importance" nullable="true"/>
    <field name="isSensitive" type="boolean" column="is_sensitive" nullable="true"/>
    <field name="subject" type="string" column="subject" length="255" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastUpdatedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_updated_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="document" target-entity="Olcs\Db\Entity\Document" inversed-by="email">
      <join-table name="email_attachment">
        <join-columns>
          <join-column name="email_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="document_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>

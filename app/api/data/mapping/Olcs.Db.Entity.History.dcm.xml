<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\History" table="history">
    <indexes>
      <index name="fk_history_entity1_idx" columns="entity_type_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="data" type="text" column="data" nullable="false"/>
    <field name="entityId" type="integer" column="entity_id" nullable="false"/>
    <field name="entityVersion" type="integer" column="entity_version" nullable="false"/>
    <many-to-one field="entityType" target-entity="Olcs\Db\Entity\EntityType">
      <join-columns>
        <join-column name="entity_type_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="template" target-entity="Olcs\Db\Entity\Template" inversed-by="history">
      <join-table name="history_template">
        <join-columns>
          <join-column name="history_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="template_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>

<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\LegacyOffence" table="legacy_offence">
    <indexes>
      <index name="fk_legacy_offence_user1_idx" columns="created_by"/>
      <index name="fk_legacy_offence_user2_idx" columns="last_modified_by"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="definition" type="string" column="definition" length="255" nullable="true"/>
    <field name="isTrailer" type="boolean" column="is_trailer" nullable="true"/>
    <field name="notes" type="string" column="notes" length="4000" nullable="true"/>
    <field name="numOfOffences" type="integer" column="num_of_offences" nullable="true"/>
    <field name="offenceAuthority" type="string" column="offence_authority" length="100" nullable="true"/>
    <field name="offenceDate" type="date" column="offence_date" nullable="true"/>
    <field name="offenceToDate" type="date" column="offence_to_date" nullable="true"/>
    <field name="offenderName" type="string" column="offender_name" length="100" nullable="true"/>
    <field name="points" type="integer" column="points" nullable="true"/>
    <field name="position" type="string" column="position" length="100" nullable="true"/>
    <field name="offenceType" type="string" column="offence_type" length="100" nullable="true"/>
    <field name="vrm" type="string" column="vrm" length="20" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="case" target-entity="Olcs\Db\Entity\Cases" mapped-by="legacyOffence"/>
  </entity>
</doctrine-mapping>

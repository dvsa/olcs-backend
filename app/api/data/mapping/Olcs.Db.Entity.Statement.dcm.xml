<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Olcs\Db\Entity\Statement" table="statement">
    <indexes>
      <index name="fk_statement_case1_idx" columns="case_id"/>
      <index name="fk_statement_address1_idx" columns="requesters_address_id"/>
      <index name="fk_statement_user1_idx" columns="created_by"/>
      <index name="fk_statement_user2_idx" columns="last_modified_by"/>
      <index name="fk_statement_ref_data2_idx" columns="contact_type"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="statementType" type="integer" column="statement_type" nullable="false"/>
    <field name="vrm" type="string" column="vrm" length="20" nullable="true"/>
    <field name="dateStopped" type="datetime" column="date_stopped" nullable="true"/>
    <field name="dateRequested" type="datetime" column="date_requested" nullable="true"/>
    <field name="authorisersTitle" type="string" column="authorisers_title" length="40" nullable="true"/>
    <field name="authorisersDecision" type="string" column="authorisers_decision" length="4000" nullable="true"/>
    <field name="issuedDate" type="datetime" column="issued_date" nullable="true"/>
    <field name="licenceNo" type="string" column="licence_no" length="20" nullable="true"/>
    <field name="licenceType" type="string" column="licence_type" length="32" nullable="true"/>
    <field name="requestersBody" type="string" column="requesters_body" length="40" nullable="true"/>
    <field name="requestersFamilyName" type="string" column="requesters_family_name" length="35" nullable="true"/>
    <field name="requestersForename" type="string" column="requesters_forename" length="35" nullable="true"/>
    <field name="createdOn" type="datetime" column="created_on" nullable="true"/>
    <field name="lastModifiedOn" type="datetime" column="last_modified_on" nullable="true"/>
    <field name="version" type="integer" column="version" nullable="false"/>
    <many-to-one field="contactType" target-entity="Olcs\Db\Entity\RefData">
      <join-columns>
        <join-column name="contact_type" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="lastModifiedBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="last_modified_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="createdBy" target-entity="Olcs\Db\Entity\User">
      <join-columns>
        <join-column name="created_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="requestersAddress" target-entity="Olcs\Db\Entity\Address">
      <join-columns>
        <join-column name="requesters_address_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="case" target-entity="Olcs\Db\Entity\Cases">
      <join-columns>
        <join-column name="case_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

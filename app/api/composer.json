{
    "name": "olcs/backend",
    "description": "Back End Application for OLCS Project",
    "repositories": [
        {
            "url": "git@gitlab.clb.npm:olcs/olcs-logging.git",
            "type": "vcs"
        },
        {
            "url": "git@gitlab.clb.npm:olcs/companies-house.git",
            "type": "vcs"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.clb.npm:olcs/olcs-autoload.git"
        }
    ],
    "require": {
        "php": ">=5.5",

        "zendframework/zendframework": "~2.3.3",
        "doctrine/orm": "~2.4.0",
        "doctrine/doctrine-orm-module": "~0.8.0",
        "doctrine/annotations": "^1.2.3",
        "gedmo/doctrine-extensions": "~2.3.9",
        "ruflin/Elastica": "v1.4.3.0",

        "olcs/companies-house": "dev-develop",
        "olcs/olcs-logging": "dev-develop",
        "olcs/autoload": "dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0.0",
        "mockery/mockery": "~0.9.3"
    },
    "autoload": {
        "classmap": [
            "module/Olcs/Db/src",
            "vendor/olcs/companies-house/lib"
        ],
        "psr-4": {
            "Olcs\\Db\\": "module/Olcs/Db/src",
            "CompaniesHouse\\": "vendor/olcs/companies-house/lib"
        }
    },
    "config": {
        "preferred-install": "dist",
        "github-oauth": {
            "github.com": "9d28c36d14775b5d8c4a5ffeee6172eecbd8c9f4"
        }
    }
}

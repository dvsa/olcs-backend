            {
               "prefix": {
                  "postcode": {
                     "value": "%SEARCH_TERM%"
                  }
               }
            },
            {
               "match": {
                  "app_id": {
                     "query": "%SEARCH_TERM%"
                  }
               }
            },
            {
               "match": {
                  "postcode": {
                     "query": "%SEARCH_TERM%"
                  }
               }
            },
            {
